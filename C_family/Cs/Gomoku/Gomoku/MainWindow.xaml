<Window x:Class="Gomoku.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gomoku"
        mc:Ignorable="d"
        Title="五子棋" Height="850" Width="800">
    <Canvas x:Name="canvas" Background="#FFCCB478" Height="840" Width="800">
        <Rectangle Margin="50,50,50,100" Height="700" Width="700" Stroke="Black" StrokeThickness="5"/>

        <Path Stroke="Black" StrokeThickness="5" Data="M 50,120 H 750"/>
        <Path Stroke="Black" StrokeThickness="5" Data="M 50,190 H 750"/>
        <Path Stroke="Black" StrokeThickness="5" Data="M 50,260 H 750"/>
        <Path Stroke="Black" StrokeThickness="5" Data="M 50,330 H 750"/>
        <Path Stroke="Black" StrokeThickness="5" Data="M 50,400 H 750"/>
        <Path Stroke="Black" StrokeThickness="5" Data="M 50,470 H 750"/>
        <Path Stroke="Black" StrokeThickness="5" Data="M 50,540 H 750"/>
        <Path Stroke="Black" StrokeThickness="5" Data="M 50,610 H 750"/>
        <Path Stroke="Black" StrokeThickness="5" Data="M 50,680 H 750"/>

        <Path Stroke="Black" StrokeThickness="5" Data="M 120,50 V 750"/>
        <Path Stroke="Black" StrokeThickness="5" Data="M 190,50 V 750"/>
        <Path Stroke="Black" StrokeThickness="5" Data="M 260,50 V 750"/>
        <Path Stroke="Black" StrokeThickness="5" Data="M 330,50 V 750"/>
        <Path Stroke="Black" StrokeThickness="5" Data="M 400,50 V 750"/>
        <Path Stroke="Black" StrokeThickness="5" Data="M 470,50 V 750"/>
        <Path Stroke="Black" StrokeThickness="5" Data="M 540,50 V 750"/>
        <Path Stroke="Black" StrokeThickness="5" Data="M 610,50 V 750"/>
        <Path Stroke="Black" StrokeThickness="5" Data="M 680,50 V 750"/>

        <Canvas x:Name="ARcanvas"/>
        <!--这个ARcanvas用来在顶层铺放AvaibableRanges,以便局末清除-->
    </Canvas>
</Window>
